#include <stdio.h>
int main() {
    int a[100], n, i, pos, val, ch;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter elements:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &a[i]);
    do {
        printf("\n1.Insert\n2.Delete\n3.Display\n4.Exit\nEnter choice: ");
        scanf("%d", &ch);
        switch (ch) {
            case 1:
                printf("Enter position and value: ");
                scanf("%d%d", &pos, &val);
                for (i = n; i >= pos; i--)
                    a[i] = a[i - 1];
                a[pos - 1] = val;
                n++;
                break;
            case 2:
                printf("Enter position to delete: ");
                scanf("%d", &pos);
                for (i = pos - 1; i < n - 1; i++)
                    a[i] = a[i + 1];
                n--;
                break;
            case 3:
                printf("Array: ");
                for (i = 0; i < n; i++)
                    printf("%d ", a[i]);
                printf("\n");
                break;
        }
    } while (ch != 4);
    return 0;
}
